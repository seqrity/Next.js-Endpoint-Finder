{
  "manifest_version": 3,
  "name": "Next.js Endpoint Finder",
  "version": "1.0",
  "description": "Shows Next.js endpoint count + full UI in popup & new tab",
  "permissions": [
    "scripting",
    "activeTab",
    "clipboardWrite"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "Next.js Endpoint Finder",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}